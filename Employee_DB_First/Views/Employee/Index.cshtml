@model IEnumerable<Employee_DB_First.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"> Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Arabic Name </th>
            <th>Name </th>
            <th>Date of Birth</th>
            <th>Hiring Date  </th>
            <th>Salary </th>
            <th>City</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNameArabic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNameEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HiringDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityNameEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                    <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.EmployeeId">Edit </a>
                    <a class="btn btn-info " asp-action="Details" asp-route-id="@item.EmployeeId">Details </a>
                    <a class="btn btn-danger"   asp-action="Delete" asp-route-id="@item.EmployeeId">Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>