@model IEnumerable<Employee_DB_First.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"> Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Arabic Name
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityNameArabic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityNameEnglish)
            </td>
            <td>
                    <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.CityId">Edit </a>
                    <a class="btn btn-info " asp-action="Details" asp-route-id="@item.CityId">Details </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CityId">Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
