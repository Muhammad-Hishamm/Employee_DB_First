@model IEnumerable<Employee_DB_First.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create"> Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Department
            </th>
            <th>
               Department Abbreviation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepatmentAbbr)
            </td>
            <td>
                    <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.DepartmentId">Edit </a>
                    <a class="btn btn-info " asp-action="Details" asp-route-id="@item.DepartmentId">Details </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DepartmentId">Delete </a>
            </td>
        </tr>
}

    </tbody>
</table>
